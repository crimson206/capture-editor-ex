{
  "name": "capture-editor",
  "displayName": "Copy HTML",
  "description": "Copy your code as HTML with syntax highlighting, preserving VS Code's editor style. Supports file saving and multi-file operations.",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.91.0"
  },
  "icon": "static/logo128.png",
  "categories": [
    "Snippets"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-html.captureCurrent",
        "title": "Copy HTML: Save Editor as HTML File"
      },
      {
        "command": "copy-html.captureFiles",
        "title": "Copy HTML: Save Multiple Editors as HTML Files, Init."
      },
      {
        "command": "copy-html.captureFilesCommandPalette",
        "title": "Copy HTML: Save Multiple Editors as HTML Files"
      },
      {
        "command": "copy-html.copySelected",
        "title": "Copy HTML: Copy Selected Text as HTML"
      }
    ],
    "configuration": {
      "title": "Capture Editor",
      "properties": {
        "captureEditor.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable developer mode for additional logging and debugging features."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "copy-html.captureCurrent"
        },
        {
          "command": "copy-html.captureFiles",
          "when": "false"
        },
        {
          "command": "copy-html.captureFilesCommandPalette"
        },
        {
          "command": "copy-html.copySelected",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "submenu": "copy-html.menu",
          "when": "editorTextFocus"
        }
      ],
      "copy-html.menu": [
        {
          "command": "copy-html.captureCurrent"
        },
        {
          "command": "copy-html.copySelected",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "copy-html.menu",
        "label": "Capture Editor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "cli": "node out/cli.js",
    "compile": "webpack --config ./webpack.config.js && webpack --config ./webview-src/webpack.config.js",
    "watch": "concurrently \"webpack --watch --config ./webpack.config.js\" \"webpack --watch --config ./webview-src/webpack.config.js\"",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package:pre": "vsce package --pre-release",
    "package": "vsce package",
    "vs-publish": "vsce publish",
    "build-webview": "webpack --config webview-src/webpack.config.js",
    "watch-webview": "webpack --watch --config webview-src/webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.0.1",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "code",
    "capture",
    "syntax highlight",
    "semantic highlight",
    "html",
    "editor style",
    "vscode",
    "clipboard",
    "documentation",
    "code block"
  ],
  "publisher": "crimson206",
  "repository": {
    "type": "git",
    "url": "https://github.com/crimson206/capture-editor-ex"
  },
  "bugs": {
    "url": "https://github.com/crimson206/capture-editor-ex/issues"
  },
  "homepage": "https://github.com/crimson206/capture-editor-ex"
}
